{% extends 'base.html.twig' %}

{% block title %}Mes Favoris{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto p-6 bg-gray-900 shadow-lg rounded-lg text-white">
        <h1 class="text-3xl font-bold text-gray-100 text-center mb-6">Mes Favoris</h1>

        {% if favorites is empty %}
            <p class="text-gray-400 text-center">Aucun favori trouv√©.</p>
        {% else %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                {% for favorite in favorites %}
                    <div class="bg-gray-800 hover:bg-gray-700 p-4 rounded-lg shadow-md flex flex-col items-center text-center">
                        <a data-turbo="false" href="{{ path('youtube_get_id', {'handle': favorite.customUrl}) }}" 
                            class="text-blue-400 hover:text-blue-600 text-lg font-semibold">
                            {{ favorite.customUrl }}
                        </a>
                        <p class="text-sm font-thin mt-1 text-gray-400">{{ favorite.createdAt | date('d-m-Y H:i') }}</p>

                        <button class="mt-4 px-4 py-2 bg-red-600 text-white rounded-md shadow-md hover:bg-red-700 transition duration-300">
                            Supprimer
                        </button>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

